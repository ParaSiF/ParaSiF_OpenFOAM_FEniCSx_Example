FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    p
    {

        solver                PCG;
        preconditioner        DIC;
        tolerance             1E-08;
        relTol                0.01;
        smoother              GaussSeidel;
        nSweeps               0;
        cacheAgglomeration    true;
        agglomerator          faceAreaPair;
        nCellsInCoarsestLevel 20;
        mergeLevels           1;
        nPreSweeps            0;
        nPostSweeps           2;
        nFinestSweeps         2;
        maxIter               1000;
        minIter               3;
        scaleCorrection       true;
        directSolveCoarsest   false;
    }

    pFinal
    {
        $p;
        tolerance             1e-09;
        relTol                0;
    }

    "pcorr.*"
    {
        $p
        tolerance       1e-06;
        relTol          0.01;
    }

    cellDisplacement
    {
        $p
        tolerance       1e-08;
        relTol          0.001;
    }

    cellDisplacementFinal
    {

        $p
        tolerance       1e-09;
        relTol          0;
    }

    U
    {
        solver                PBiCG;
        preconditioner        DILU;
        tolerance             1E-08;
        relTol                0.001;
        smoother              None;
        nSweeps               0;
        cacheAgglomeration    no;
        agglomerator          faceAreaPair;
        nCellsInCoarsestLevel 0;
        mergeLevels           0;
        nPreSweeps            0;
        nPostSweeps           0;
        nFinestSweeps         0;
        maxIter               1000;
	    minIter 	          3;
    }

    UFinal
    {
        $U
        tolerance       1e-08;
        relTol          0;
    }

}

PIMPLE
{
    nOuterCorrectors            50;
    nCorrectors                 2;
    nNonOrthogonalCorrectors    1;

    momentumPredictor         true;
    correctPhi                true;
    moveMeshOuterCorrectors   true;
    checkMeshCourantNo        true;
    turbOnFinalIterOnly       true;

    residualControl
    {
        U
        {
            tolerance   1e-5;
            relTol      0.05;
        }
        p
        {
            tolerance   5e-4;
            relTol      0.1;
        }
    }
}

relaxationFactors
{
    fields
    {
        p                     1.0;
        pFinal                1.0;
        cellDisplacement      1.0;
        cellDisplacementFinal 1.0;
    }
    equations
    {
        "U|k|epsilon"         0.5;
        "(U|k|epsilon)Final"  1.0;
    }
}

